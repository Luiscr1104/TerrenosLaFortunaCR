---
interface Props {
  image?: string;
  accentGold?: string;
  accentGreen?: string;
}

const {
  image = "https://imagedelivery.net/Lh5ivcu1Gl9SRBAdYRSP2g/44060157-e87e-4492-8987-3dc51ccac900/public",
  accentGold = "#F5D77C",
  accentGreen = "#25D366",
} = Astro.props;
---

<section class="relative py-20 bg-white overflow-hidden">
  <!-- Encabezado elegante -->
  <div class="text-center mb-16 md:mb-20 lg:mb-24">
    <div
      class="inline-flex items-center gap-2 bg-[color:var(--gold)]/10 text-[color:var(--gold)] px-4 py-2 rounded-full text-sm font-semibold mb-4"
      style={`--gold:${accentGold}`}
    >
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"
        ></path>
      </svg>
      <span>Own a Piece of Paradise</span>
    </div>

    <h2
      class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-display font-bold text-neutral-800 mb-4 md:mb-6 tracking-tight"
    >
      Find Your
      <span class="text-neutral-900 font-extrabold">Costa Rica Property</span>
      <br class="hidden sm:block" />
      With Expert Guidance
    </h2>

    <p class="text-lg md:text-xl text-neutral-600 max-w-3xl mx-auto">
      Full legal protection and remote purchase available.
      <span class="font-semibold text-[color:var(--gold)]" style={`--gold:${accentGold}`}>
        Our team makes it effortless.
      </span>
    </p>
  </div>

  <!-- Grid principal -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-stretch">
    <!-- Imagen -->
    <div class="relative rounded-3xl overflow-hidden border border-neutral-200 shadow-[0_14px_40px_-20px_rgba(0,0,0,0.25)]">
      <img
        src={image}
        alt="Costa Rica luxury property"
        class="w-full h-[420px] md:h-[520px] lg:h-[600px] object-cover"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-black/20 to-transparent"></div>
      <div class="absolute bottom-5 left-6">
        <span class="rounded-full bg-white/90 backdrop-blur px-4 py-1.5 text-sm font-medium text-neutral-800 shadow">
          La Fortuna • Costa Rica
        </span>
      </div>
    </div>

    <!-- Formulario -->
    <div
      class="rounded-3xl border border-[#F5D77C]/50 bg-white/90 backdrop-blur-sm shadow-[0_14px_40px_-20px_rgba(0,0,0,0.2)] p-8 lg:p-10"
    >
      <h3 class="text-2xl md:text-3xl font-display font-semibold text-neutral-900 mb-3">
        Let’s Talk About Your Investment
      </h3>
      <p class="text-neutral-600 mb-6">
        Tell us what you’re looking for — we’ll help you find the perfect land or home in Costa Rica.
      </p>

      <form method="post" action="/api/contact" class="space-y-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-neutral-600 mb-1.5">Full Name</label>
            <input
              name="fullname"
              required
              class="w-full rounded-xl border border-neutral-200 bg-white px-3.5 py-2.5 text-sm outline-none focus:border-[color:var(--gold)] focus:ring-2 focus:ring-[color:var(--gold)]/25 transition"
              style={`--gold:${accentGold}`}
              placeholder="John Doe"
            />
          </div>
          <div>
            <label class="block text-xs font-medium text-neutral-600 mb-1.5">Email</label>
            <input
              type="email"
              name="email"
              required
              class="w-full rounded-xl border border-neutral-200 bg-white px-3.5 py-2.5 text-sm outline-none focus:border-[color:var(--gold)] focus:ring-2 focus:ring-[color:var(--gold)]/25 transition"
              style={`--gold:${accentGold}`}
              placeholder="john@example.com"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-neutral-600 mb-1.5">Phone / WhatsApp</label>
            <input
              name="phone"
              class="w-full rounded-xl border border-neutral-200 bg-white px-3.5 py-2.5 text-sm outline-none focus:border-[color:var(--gold)] focus:ring-2 focus:ring-[color:var(--gold)]/25 transition"
              style={`--gold:${accentGold}`}
              placeholder="+1 555 000 111"
            />
          </div>
          <div>
            <label class="block text-xs font-medium text-neutral-600 mb-1.5">Interest</label>
            <select
              name="interest"
              required
              class="w-full rounded-xl border border-neutral-200 bg-white px-3 py-2.5 text-sm outline-none focus:border-[color:var(--gold)] focus:ring-2 focus:ring-[color:var(--gold)]/25 transition"
              style={`--gold:${accentGold}`}
            >
              <option value="home">Home / Villa</option>
              <option value="land">Land / Lots</option>
              <option value="investment">Investment Property</option>
            </select>
          </div>
        </div>

        <div>
          <label class="block text-xs font-medium text-neutral-600 mb-1.5">Message</label>
          <textarea
            name="message"
            rows={4}
            required
            class="w-full rounded-xl border border-neutral-200 bg-white px-3.5 py-2.5 text-sm outline-none focus:border-[color:var(--gold)] focus:ring-2 focus:ring-[color:var(--gold)]/25 transition"
            placeholder="Tell us about your dream property..."
            style={`--gold:${accentGold}`}
          ></textarea>
        </div>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-3 pt-2">
          <button
            type="submit"
            class="inline-flex justify-center items-center gap-2 rounded-xl px-6 py-3 text-sm font-semibold text-neutral-900 bg-[color:var(--gold)] hover:brightness-[.97] active:brightness-95 shadow-[0_10px_30px_-12px_rgba(0,0,0,0.35)] transition"
            style={`--gold:${accentGold}`}
          >
            Request Consultation ↗
          </button>

          <a
            href="https://wa.me/50612345678?text=Hi!%20I%20want%20info%20about%20properties%20in%20La%20Fortuna"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex justify-center items-center gap-2 rounded-xl px-6 py-3 text-sm font-semibold text-white bg-[color:var(--green)] hover:brightness-105 active:brightness-95 transition"
            style={`--green:${accentGreen}`}
          >
            WhatsApp Now
          </a>
        </div>

        <p class="mt-3 text-[11px] text-neutral-500 text-center sm:text-left">
          By submitting, you agree to be contacted about available properties in Costa Rica.
        </p>
      </form>
    </div>
  </div>
</section>
