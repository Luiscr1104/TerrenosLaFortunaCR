---
/* HeroSplit.astro */
const accent = '#25D366' // tu verde WhatsApp
---

<section class="relative">
  <!-- Marco exterior con borde blanco y esquinas grandes -->
  <div class="relative mx-auto max-w-[120rem] px-4 sm:px-6 lg:px-8">
    <div class="relative grid grid-cols-1 lg:grid-cols-[520px_minmax(0,1fr)] gap-4">
      <div class="rounded-[28px] bg-white shadow-[0_20px_60px_-20px_rgba(0,0,0,.25)] border border-neutral-200 overflow-hidden">
        <!-- Nav minimal -->
        <div class="flex items-center justify-between px-6 pt-6">
          <nav class="flex items-center gap-6 text-sm text-neutral-500">
            <a href="#" class="font-medium text-neutral-900">Home</a>
            <a href="#">Villas</a>
            <a href="#">Manor</a>
          </nav>
          <a href="https://wa.me/50612345678" target="_blank" class="hidden sm:inline-flex items-center gap-2 rounded-full border border-neutral-200 px-4 py-2 text-sm font-semibold hover:bg-neutral-50">
            Contact Us
          </a>
        </div>

        <!-- Headline -->
        <div class="px-6 pt-6 pb-4">
          <h1 class="text-4xl md:text-5xl font-semibold tracking-tight text-neutral-900">
            Reserve Your <br class="hidden sm:block" /> Ideal Holiday
          </h1>
          <p class="mt-3 max-w-prose text-neutral-600">
            We specialize in curating exceptional villas: comfort, privacy and convenience for your dream vacation.
          </p>

          <div class="mt-4">
            <a href="#properties" class="inline-flex items-center gap-2 rounded-full bg-black text-white px-5 py-2.5 text-sm font-semibold hover:bg-neutral-800">
              More <span aria-hidden>↗</span>
            </a>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-2 px-6 pb-4">
          <div class="rounded-2xl border border-neutral-200 p-4 text-center">
            <div class="text-2xl font-bold text-[color:${accent}]">115k+</div>
            <div class="text-xs text-neutral-500">Capital Raised</div>
          </div>
          <div class="rounded-2xl border border-neutral-200 p-4 text-center">
            <div class="text-2xl font-bold text-[color:${accent}]">70k+</div>
            <div class="text-xs text-neutral-500">Happy Customers</div>
          </div>
          <div class="rounded-2xl border border-neutral-200 p-4 text-center">
            <div class="text-2xl font-bold text-[color:${accent}]">47k+</div>
            <div class="text-xs text-neutral-500">Property Options</div>
          </div>
        </div>

        <!-- Mini card (slider placeholder) -->
        <div class="px-6 pb-6">
          <div class="relative overflow-hidden rounded-2xl border border-neutral-200">
            <img src="/images/sample-villa.jpg" alt="Vancouver, Canada Villa" class="h-40 w-full object-cover" />
            <div class="absolute inset-x-0 bottom-0 p-3">
              <div class="flex items-center justify-between rounded-xl bg-white/90 px-3 py-2 backdrop-blur">
                <div>
                  <p class="text-xs text-neutral-500">Vancouver, Canada</p>
                  <p class="text-sm font-semibold">Popular</p>
                </div>
                <div class="flex items-center gap-1 text-xs">
                  <span class="text-yellow-500">★★★★★</span>
                </div>
              </div>
            </div>
            <!-- Flechas dummy -->
            <button class="absolute right-2 top-2 rounded-full bg-white/90 px-2 py-1 text-sm shadow">›</button>
            <button class="absolute right-10 top-2 rounded-full bg-white/90 px-2 py-1 text-sm shadow">‹</button>
          </div>
        </div>
      </div>

      <!-- Right side: media hero -->
      <div class="relative rounded-[28px] overflow-hidden border border-white/60 shadow-[0_20px_60px_-20px_rgba(0,0,0,.35)]">
        <!-- Imagen/video de fondo -->
        <div class="absolute inset-0">
          <!-- Usa imagen o iframe YouTube silenciado -->
          <img src="/images/hero-modern-villa.jpg" alt="Modern Villa" class="h-full w-full object-cover" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent"></div>
        </div>

        <!-- Chips superiores -->
        <div class="relative z-10 p-5 sm:p-6 flex items-start justify-between">
          <div class="flex items-center gap-3">
            <div class="rounded-full bg-white/90 backdrop-blur px-3 py-1.5 text-xs font-medium shadow">
              Melbourne VIC, Australia
            </div>
          </div>
          <button class="rounded-full bg-white/90 px-3 py-1.5 text-xs font-semibold shadow hover:bg-white">
            ☰
          </button>
        </div>

        <!-- Texto + filtros -->
        <div class="relative z-10 mt-auto flex h-full flex-col justify-end p-6 sm:p-10">
          <p class="max-w-2xl text-white/90 text-sm sm:text-base">
            Enjoy a luxurious vacation in a villa with breathtaking city views and easy access to the vibrant city life.
          </p>

          <!-- Pills de filtro -->
          <form class="mt-4 flex flex-wrap items-center gap-3">
            <div class="flex items-center gap-2 rounded-full bg-white px-4 py-2 text-sm shadow">
              <span class="text-neutral-500">Select Type</span>
              <select class="bg-transparent text-neutral-900 focus:outline-none">
                <option>Villa</option>
                <option>Home</option>
                <option>Land</option>
              </select>
            </div>

            <div class="flex items-center gap-2 rounded-full bg-white px-4 py-2 text-sm shadow">
              <span class="text-neutral-500">Location</span>
              <select class="bg-transparent text-neutral-900 focus:outline-none">
                <option>La Fortuna</option>
                <option>Guanacaste</option>
                <option>Monteverde</option>
              </select>
            </div>

            <button
              type="button"
              class="rounded-full bg-black px-6 py-2 text-sm font-semibold text-white shadow hover:bg-neutral-800"
            >
              Search
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Borde redondeado general (opcional, para imitar el marco blanco) -->
    <div class="pointer-events-none absolute inset-0 -z-10">
      <div class="rounded-[32px] ring-1 ring-white/70 backdrop-blur-sm"></div>
    </div>
  </div>
</section>
