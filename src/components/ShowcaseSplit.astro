---
interface Stat { label: string; value: string }
interface Props {
  title?: string; subtitle?: string; promoTitle?: string; promoHighlight?: string;
  ctaLabel?: string; ctaHref?: string; image?: string; videoUrl?: string;
  locationChip?: string; stats?: Stat[]; reversed?: boolean; accent?: string;
}

const {
  promoTitle = "ðŸ”¥ Hot Offer",
  promoHighlight = "Limited-Time Opportunity",
  title = "Invest in Arenal â€” Luxury Homes & Land",
  subtitle = "Turnkey guidance for U.S. buyers. Clear titles, legal support, and high-yield rentals.",
  ctaLabel = "See Featured",
  ctaHref = "/properties",
  image = "https://imagedelivery.net/Lh5ivcu1Gl9SRBAdYRSP2g/44060157-e87e-4492-8987-3dc51ccac900/public",
  videoUrl = "",
  locationChip = "La Fortuna, Costa Rica",
  stats = [
    { value: "$2.5M+", label: "Properties Sold" },
    { value: "98%", label: "Client Satisfaction" },
    { value: "30 Days", label: "Avg. Close Time" },
  ],
  reversed = false,
  accent = "#F5D77C", // Amarillo premium
} = Astro.props;
---

<section class="relative py-20" style={`--accent:${accent}; --dark:#0a0a0a;`}>
  <div class="mx-auto max-w-[120rem] px-4 sm:px-6 lg:px-8">
    <!-- Promo heading -->
    <div class="text-center mb-10 md:mb-14">
      <div
        class="inline-flex items-center gap-2 bg-[color:var(--accent)]/12 text-[color:var(--dark)] font-semibold text-sm px-4 py-2 rounded-full border border-[color:var(--accent)]/50 mb-3"
      >
        <span class="inline-block h-2 w-2 rounded-full bg-[color:var(--accent)]"></span>
        {promoTitle}
      </div>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-[color:var(--dark)] mb-2 tracking-tight">
        <span class="bg-[color:var(--accent)]/20 px-2 rounded-md">{promoHighlight}</span>
      </h2>
      <p class="text-neutral-700 text-base md:text-lg max-w-2xl mx-auto">
        Discover Costa Ricaâ€™s most sought-after real estate near Arenal Volcano â€” high ROI and paradise living.
      </p>
    </div>

    <!-- Main grid -->
    <div
      class={`grid gap-4 grid-cols-1 ${
        reversed
          ? "lg:grid-cols-[minmax(0,1fr)_520px]"
          : "lg:grid-cols-[520px_minmax(0,1fr)]"
      }`}
    >
      <!-- Left: content -->
      <div
        class="rounded-[26px] bg-white border border-neutral-200/80 shadow-[0_14px_40px_-20px_rgba(0,0,0,0.18)] overflow-hidden"
      >
        <div class="px-6 pt-6">
          <h3 class="text-2xl md:text-3xl font-bold text-[color:var(--dark)] mb-3 leading-snug">
            {title}
          </h3>
          <p class="text-neutral-700 mb-5">{subtitle}</p>
          <a
            href={ctaHref}
            class="inline-flex items-center gap-2 rounded-full px-5 py-2.5 text-sm font-semibold
                   text-[color:var(--dark)] bg-[color:var(--accent)]
                   shadow-sm ring-1 ring-[color:var(--accent)]/40
                   hover:brightness-95 active:brightness-90 transition"
          >
            {ctaLabel}
            <span aria-hidden class="translate-y-px">â†—</span>
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-2 px-6 py-6">
          {stats.map(({ value, label }) => (
            <div
              class="rounded-xl border border-neutral-200 bg-white p-4 text-center
                     hover:border-[color:var(--accent)]/50 hover:shadow-[0_6px_20px_-10px_rgba(0,0,0,.25)] transition-all"
            >
              <div class="text-2xl font-extrabold tracking-tight"
                   style={`color:var(--dark);`}>
                <span class="text-[color:var(--accent)]">{value}</span>
              </div>
              <div class="text-xs text-neutral-600 mt-0.5">{label}</div>
            </div>
          ))}
        </div>

        <!-- Mini-card -->
        <div class="px-6 pb-6">
          <div class="relative overflow-hidden rounded-2xl border border-neutral-200">
            <slot name="mini-card">
              <img
                src="https://imagedelivery.net/Lh5ivcu1Gl9SRBAdYRSP2g/44060157-e87e-4492-8987-3dc51ccac900/public"
                alt="Featured"
                class="h-40 w-full object-cover"
              />
              <div class="absolute inset-x-0 bottom-0 p-3">
                <div
                  class="flex items-center justify-between rounded-xl bg-white/90 px-3 py-2 backdrop-blur border border-[color:var(--accent)]/30"
                >
                  <div>
                    <p class="text-xs text-neutral-500">{locationChip}</p>
                    <p class="text-sm font-semibold text-[color:var(--dark)]">Popular</p>
                  </div>
                  <span class="text-xs text-[color:var(--accent)]">â˜…â˜…â˜…â˜…â˜…</span>
                </div>
              </div>
            </slot>
          </div>
        </div>
      </div>

      <!-- Right: media -->
      <div
        class="relative rounded-[26px] overflow-hidden border border-neutral-100 shadow-[0_18px_50px_-18px_rgba(0,0,0,.3)]"
      >
        <div class="absolute inset-0">
          {videoUrl ? (
            <iframe
              class="h-full w-full object-cover pointer-events-none"
              src={`${videoUrl}${videoUrl.includes("?") ? "&" : "?"}autoplay=1&mute=1&controls=0&loop=1&playlist=${videoUrl.split("/").pop()}`}
              title="Showcase"
              allow="autoplay; fullscreen; picture-in-picture"
            />
          ) : (
            <img
              src={image}
              alt="Showcase"
              class="h-full w-full object-cover"
            />
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/25 to-transparent"></div>
        </div>

        <!-- Chip -->
        <div class="relative z-10 p-5 sm:p-6 flex items-start justify-between">
          {locationChip && (
            <div
              class="rounded-full bg-black/80 text-white border border-[color:var(--accent)]/60 px-3 py-1.5 text-xs font-medium shadow"
            >
              {locationChip}
            </div>
          )}
        </div>

        <!-- Text and filters -->
        <div class="relative z-10 mt-auto flex h-full flex-col justify-end p-6 sm:p-10">
          <slot name="media-copy">
            <p class="max-w-2xl text-white/90 text-sm sm:text-base">
              Enjoy panoramic volcano views and guaranteed legal security â€” direct from the #1 real estate company in Costa Rica.
            </p>
          </slot>

          <slot name="filters">
            <form class="mt-4 flex flex-wrap items-center gap-3">
              <div
                class="flex items-center gap-2 rounded-full bg-white px-4 py-2 text-sm shadow border border-[color:var(--accent)]/40"
              >
                <span class="text-neutral-600">Type</span>
                <select class="bg-transparent text-[color:var(--dark)] focus:outline-none">
                  <option>Villa</option>
                  <option>Home</option>
                  <option>Land</option>
                </select>
              </div>
              <div
                class="flex items-center gap-2 rounded-full bg-white px-4 py-2 text-sm shadow border border-[color:var(--accent)]/40"
              >
                <span class="text-neutral-600">Location</span>
                <select class="bg-transparent text-[color:var(--dark)] focus:outline-none">
                  <option>La Fortuna</option>
                  <option>Guanacaste</option>
                  <option>Monteverde</option>
                </select>
              </div>
              <button
                type="button"
                class="rounded-full px-6 py-2 text-sm font-semibold
                       bg-[color:var(--dark)] text-white border border-[color:var(--accent)]/40
                       hover:bg-black hover:shadow-[0_6px_20px_-10px_rgba(0,0,0,.5)] transition"
              >
                Search
              </button>
            </form>
          </slot>
        </div>
      </div>
    </div>
  </div>
</section>
